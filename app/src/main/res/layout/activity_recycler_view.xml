<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RecyclerViewActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        android:layoutAnimation="@anim/item_animation_layout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile"
        tools:itemCount="3"
        tools:listitem="@layout/item_custom_recycler" />

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/itemRecyclerViewImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            app:circularflow_radiusInDP="50"
            app:layout_constraintBottom_toTopOf="@id/itemRecyclerViewSS"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/itemRecyclerViewPhoneName"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itemRecyclerViewPhoneName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/itemRecyclerViewPrice"
            app:layout_constraintLeft_toRightOf="@id/itemRecyclerViewImage"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="@tools:sample/cities" />

        <TextView
            android:id="@+id/itemRecyclerViewPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/itemRecyclerViewImage"
            app:layout_constraintLeft_toLeftOf="@id/itemRecyclerViewPhoneName"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemRecyclerViewPhoneName"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="@tools:sample/full_names" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="itemRecyclerViewImage" />

        <TextView
            android:id="@+id/itemRecyclerViewSS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_background_item"
            android:drawableLeft="@drawable/ss"
            android:padding="10dp"
            android:textSize="25dp"
            android:textAlignment="center"

            app:layout_constraintBottom_toTopOf="@+id/itemRecyclerViewSSH"
            app:layout_constraintEnd_toStartOf="@+id/itemRecyclerViewS"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/barrierScore"
            tools:text="156" />

        <TextView
            android:id="@+id/itemRecyclerViewSSH"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_background_item"
            android:drawableLeft="@drawable/ssh"
            android:padding="10dp"
            android:textSize="25dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/itemRecyclerViewSH"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itemRecyclerViewSS"
            tools:text="51" />

        <TextView
            android:id="@+id/itemRecyclerViewS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_background_item"
            android:drawableLeft="@drawable/s"
            android:padding="10dp"
            android:textSize="25dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/itemRecyclerViewSH"
            app:layout_constraintRight_toLeftOf="@+id/barrierA"
            app:layout_constraintLeft_toRightOf="@+id/itemRecyclerViewSS"
            app:layout_constraintTop_toTopOf="@+id/barrierScore"
            tools:text="1569" />

        <TextView
            android:id="@+id/itemRecyclerViewSH"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_background_item"
            android:drawableLeft="@drawable/sh"
            android:padding="10dp"
            android:textSize="25dp"

            android:textAlignment="center"


            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/barrierA"
            app:layout_constraintTop_toBottomOf="@+id/itemRecyclerViewS"
            app:layout_constraintLeft_toRightOf="@+id/itemRecyclerViewSSH"
            tools:text="1569" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="left"
            android:padding="10dp"
            app:constraint_referenced_ids="itemRecyclerViewA" />

        <TextView
            android:id="@+id/itemRecyclerViewA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/custom_background_item"
            android:drawableLeft="@drawable/a"
            android:padding="10dp"
            android:textSize="25dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrierScore"

            tools:text="2500" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addItemButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="add"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        app:layout_constraintRight_toLeftOf="@id/deleteAllItemButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/deleteAllItemButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="delete all"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintLeft_toRightOf="@id/addItemButton" />




</androidx.constraintlayout.widget.ConstraintLayout>

